@section styles
{
    <link rel="stylesheet" href="~/css/text.css" asp-append-version="true">
}

@section scripts
{
    <script src="~/js/text.js" asp-append-version="true"></script>
}

<div style="min-height: 100vh; padding: 1.5em;">
    <form asp-controller="Notes" asp-action="SaveNote">
        <div class="NoteTitle"><input type="text" placeholder="Введите заголовок" name="title"></div>
        <br />
        <div class="NoteBlock" id="NoteBlock"></div>
        <br />
        <div class="TextAreaNone">
            <textarea class="TextArea" id="TextArea" name="content"> </textarea>
        </div>
        <br />
        <div style="display:flex;justify-content:center;align-items:center;">
            <input type="submit" class="Button" value="Сохранить" />
        </div>
    </form>
</div>